generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String
  password  String
  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())

  incomes   Income[]
  expenses  Expense[]

  @@map("users")
}

model Income {
  id        String    @id @default(uuid())
  description String
  amount    Float
  addedAt   DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id])
  userId    String

  @@map("incomes")
}

model Expense {
  id        String    @id @default(uuid())
  description String
  amount    Float
  spentAt   DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id])
  userId    String

  @@map("expenses")
}
